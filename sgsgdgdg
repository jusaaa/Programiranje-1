#include <iostream>
using namespace std;
const int vel = 5;

int brojanjeCifara(int br) {
	int brojac = 0;
	while (br>0)
	{
		br /= 10;
		brojac++;
	}
	return brojac;
}
void unos(int niz[]) {
	int broj;
	for (size_t i = 0; i < vel; i++)
	{
		cout << "Unesite " << i + 1 << ". broj: ";
		cin >> broj;
		if (broj % 2 == 0 & brojanjeCifara(broj) % 2 != 0) {
			niz[i] = broj;
		}
		else {
			cout << "Pogresan unos!";
			i--;
		}
	}
}
void ukloni(int niz[],int&stvarna) {
	int indeks = 0;
	for (size_t i = 0; i < vel; i++)
	{
		if (niz[i] % 6 != 0) {
			niz[indeks++] = niz[i];
		}
	}
	stvarna = indeks;
}

int main() {
	int niz[vel];
	int stvarnaVel = 0;
	unos(niz);
	ukloni(niz, stvarnaVel);

	for (size_t i = 0; i < stvarnaVel; i++)
	{
		cout << niz[i] << "|";
	}

	system("pause>0");
	return 0;
}
